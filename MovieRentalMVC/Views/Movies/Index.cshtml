@model IEnumerable<MovieRentalMVC.Models.Movie>
@{
    ViewBag.Title = "Index";
}
<h2>Movie</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                @*<td>@Html.ActionLink("movie.Name","</td>*@
                @*ActionLink(Name,Action,Parameter,Attribute such as class=btn)*@

                <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id },null)</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>
