@model MovieRentalMVC.Models.Customer

@{
                /**/

                ViewBag.Title = "New";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@*Html.BeginForm('Action', 'Controller') ---Render <form> tag, if use using () -> no need to dispose or to use </form>*@
@using (Html.BeginForm("Create", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextAreaFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Birthday)
        @Html.TextAreaFor(m => m.Birthday, new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.IsSubscribedToNewsLetter) Subscribed to Newsletter?
        </label>
    </div>
}